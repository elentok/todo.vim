#!/bin/bash

TODO_ROOT="$HOME/Dropbox/todo"
TODO_FILE="$TODO_ROOT/todo.txt"
TODO_FILTERED="$TODO_ROOT/.todo.filtered.txt"
TODO_UNFILTERED="$TODO_ROOT/.todo.unfiltered.txt"

main() {
  command=$1
  shift
  case $command in
    "keywords" )
      keywords
      ;;
    "filter" )
      filter $*
      ;;
    "merge" )
      merge
      ;;
  esac
}

keywords() {
  awk '{ split($0, words, " "); 
    for (i in words) { 
      if (match(words[i], "^[@\\+]") > 0) { 
        word = words[i]
        gsub(/:$/, "", word);
        print word;
      }
    }
  }' $TODO_FILE | sort | uniq
}

filter() {
  echo ">>> Filtered by '$*'" > $TODO_FILTERED
  pattern=$(create_awk_pattern $*)
  awk "{
    if ($pattern) {
      print >> \"$TODO_FILTERED\"
    } else {
      print > \"$TODO_UNFILTERED\"
    }
  }" $TODO_FILE
}

create_awk_pattern() {
  pattern="$*"
  pattern="${pattern// // && /}"
  pattern="${pattern//+/\\+}"
  echo "/$pattern/"
}

merge() {
  (
    grep -v '^>>>' $TODO_FILTERED
    cat $TODO_UNFILTERED
  ) | sort > $TODO_FILE
}

main $*
